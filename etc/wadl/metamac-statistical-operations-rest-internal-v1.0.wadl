	<grammars>
 		<include href="metamac-statistical-operations-rest-internal-domain-v1.0.xsd" />
 		<include href="metamac-rest-api:metamac-rest-common-domain-v1.0.xsd" />
 	</grammars>
 	
	<resources base="URL_RESOURCES_BASE">
		<resource id="statisticalOperationsRestFacadeV10">
			<resource path="operations">
				<method name="GET" id="findOperations">
					<request>
						<param name="limit" style="query" required="false"/>
						<param name="offset" style="query" required="false"/>
					</request>
	                <response status="200">
						<representation mediaType="application/xml" element="common:relatedResourcesPagedResult"/> 
                        <representation mediaType="application/json" element="common:relatedResourcesPagedResult"/> 
	                </response>
					<response status="404 500">
						<representation mediaType="application/xml" element="common:error"/> 
                        <representation mediaType="application/json" element="common:error"/> 
	                </response>
				</method>
			</resource>				
			<resource path="operations/{code}">
