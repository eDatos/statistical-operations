<?xml version="1.0" encoding="UTF-8"?>
<wadl:application
			 xmlns:wadl="http://wadl.dev.java.net/2009/02"
			 xmlns:domain="http://www.siemac.org/metamac/statistical/operations/rest/internal/v1.0/domain"
			 xmlns:common="http://www.siemac.org/metamac/rest/common/v1.0/domain">
 	
	<wadl:grammars>
 		<wadl:include href="metamac-statistical-operations-rest-internal-domain-v1.0.xsd" />
 		<wadl:include href="metamac-rest-api:metamac-rest-common-domain-v1.0.xsd" />
 	</wadl:grammars>
 	
	<wadl:resources base="URL_RESOURCES_BASE">
		<wadl:resource id="statisticalOperationsRestFacadeV10">
			<wadl:resource path="operations">
				<wadl:method name="GET" id="findOperations">
					<wadl:doc>
           				<![CDATA[Returns paged list operations, according to criteria]]>
         			</wadl:doc>
					<wadl:request>
						<wadl:param name="query" style="query" required="false"/>
						<wadl:param name="orderBy" style="query" required="false"/>
						<wadl:param name="limit" style="query" required="false"/>
						<wadl:param name="offset" style="query" required="false"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="common:resourcesPagedResult"/> 
                        <wadl:representation mediaType="application/json" element="common:resourcesPagedResult"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>				
			<wadl:resource path="operations/{id}">
				<wadl:method name="GET" id="retrieveOperationById">
					<wadl:request>
						<wadl:param name="id" style="template"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="domain:operation"/> 
                        <wadl:representation mediaType="application/json" element="domain:operation"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>
			<wadl:resource path="operations/{id}/families">
				<wadl:method name="GET" id="retrieveFamiliesByOperation">
					<wadl:request>
						<wadl:param name="id" style="template"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="common:resourcesNoPagedResult"/> 
                        <wadl:representation mediaType="application/json" element="common:resourcesNoPagedResult"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>
			<wadl:resource path="operations/{operationId}/instances">
				<wadl:method name="GET" id="findInstances">
					<wadl:request>
						<wadl:param name="operationId" style="template"/>
						<wadl:param name="query" style="query" required="false"/>
						<wadl:param name="orderBy" style="query" required="false"/>
						<wadl:param name="limit" style="query" required="false"/>
						<wadl:param name="offset" style="query" required="false"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="common:resourcesPagedResult"/> 
                        <wadl:representation mediaType="application/json" element="common:resourcesPagedResult"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>				
			<wadl:resource path="operations/{operationId}/instances/{id}">
				<wadl:method name="GET" id="retrieveInstanceById">
					<wadl:request>
						<wadl:param name="operationId" style="template"/>
						<wadl:param name="id" style="template"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="domain:instance"/> 
                        <wadl:representation mediaType="application/json" element="domain:instance"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>
			<wadl:resource path="families">
				<wadl:method name="GET" id="findFamilies">
					<wadl:request>
						<wadl:param name="query" style="query" required="false"/>
						<wadl:param name="orderBy" style="query" required="false"/>
						<wadl:param name="limit" style="query" required="false"/>
						<wadl:param name="offset" style="query" required="false"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="common:resourcesPagedResult"/> 
                        <wadl:representation mediaType="application/json" element="common:resourcesPagedResult"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>				
			<wadl:resource path="families/{id}">
				<wadl:method name="GET" id="retrieveFamilyById">
					<wadl:request>
						<wadl:param name="id" style="template"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="domain:family"/> 
                        <wadl:representation mediaType="application/json" element="domain:family"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>
			<wadl:resource path="families/{id}/operations">
				<wadl:method name="GET" id="retrieveOperationsByFamily">
					<wadl:request>
						<wadl:param name="id" style="template"/>
						<wadl:param name="limit" style="query" required="false"/>
						<wadl:param name="offset" style="query" required="false"/>
					</wadl:request>
	                <wadl:response status="200">
						<wadl:representation mediaType="application/xml" element="common:resourcesPagedResult"/> 
                        <wadl:representation mediaType="application/json" element="common:resourcesPagedResult"/> 
	                </wadl:response>
					<wadl:response status="404 500">
						<wadl:representation mediaType="application/xml" element="common:error"/> 
                        <wadl:representation mediaType="application/json" element="common:error"/> 
	                </wadl:response>
				</wadl:method>
			</wadl:resource>				
		</wadl:resource>
	</wadl:resources>  
</wadl:application>